<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

    <TextView
        android:id="@+id/id_txv_didi_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="奔跑吧！滴滴！"
        android:textSize="20dp"/>

    <View
        android:id="@+id/id_view_split_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/id_txv_didi_title"
        android:layout_marginTop="10dp"
        android:background="#000000"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/id_view_split_one"
        android:layout_marginTop="46dp"
        android:text="获取号码："
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView_phone_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/id_txv_didi_title"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/id_txv_didi_qinglishuju"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="87dp"
        android:text="清理数据："
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView_clean_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_phone_num"
        android:layout_alignTop="@+id/id_txv_didi_qinglishuju"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progressBar_didi_get_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_phone_num"
        android:layout_alignTop="@+id/textView2"
        android:indeterminate="false"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/progressBar_didi_clean_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/progressBar_didi_get_phone"
        android:layout_alignTop="@+id/textView_clean_data"
        android:indeterminate="false"
        android:visibility="invisible"/>


</RelativeLayout>